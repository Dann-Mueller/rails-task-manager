<h1>Edit Task</h1>
<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>
  <div>
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>
  <div>
    <%= form.submit 'Update Task' %>
  </div>
<% end %>
<%= link_to 'Back to List', tasks_path %>

<%= render 'form' %>
